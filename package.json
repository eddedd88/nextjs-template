{
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "yarn ci && next build",
    "start": "next start",
    "test": "jest --watch",
    "ci": "tsc --noEmit && next lint --max-warnings=0 && jest --ci",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-testing-library": "^5.0.3",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown --single-quote --no-semi --jsx-single-quote --arrow-parens avoid --trailing-comma none"
  }
}
